<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcommerceWithApi" parent="Theme.AppCompat.Light.NoActionBar">
       <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="Theme.EcommerceWithApi" parent="Base.Theme.EcommerceWithApi" />
    <style name="mainActivityTheme" parent="Base.Theme.EcommerceWithApi">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <!--style text-->
    <style name="titleStyleText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">8dp</item>

    </style>
    <style name="TitleTextSeeAll">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextSeeAll">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="OvalImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>